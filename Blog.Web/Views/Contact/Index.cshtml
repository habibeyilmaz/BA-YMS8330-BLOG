@{
    Layout = "_Layout";
}

<div id="Contact-Index-Form">
    <form>
        <input type="text" id="Name" placeholder="Adınız" />
        <br/>
        <input type="text" id="Surname" placeholder="Soyadın" />
        <br/>
        <textarea id="Message" placeholder="Mesajınız..."></textarea>
        <br />
        <input type="button" value="Gönder" onclick="Page.Contact.Send();" />
    </form>
</div>
<div id="Contact-Index-Sending" style="display: none;">
    <h3>İletiniz gönderiliyor...</h3>
</div>
<div id="Contact-Index-Sent" style="display: none;">
    <h3>İletiniz gönderildi...</h3>
</div>